<Window x:Class="LInjector.Pages.Popups.InputText"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LInjector.Pages.Popups"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        MinWidth="425" MinHeight="275"
        Height="275" Width="425"
        SourceInitialized="Window_SourceInitialized"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="True"
        Title="">
    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="0" UseAeroCaptionButtons="True" NonClientFrameEdges="None" ResizeBorderThickness="30"/>
    </shell:WindowChrome.WindowChrome>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="38*"/>
            <RowDefinition Height="31*"/>
        </Grid.RowDefinitions>
        <Border Padding="30" Grid.RowSpan="2">
            <Border ClipToBounds="False">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="0" Opacity="1" x:Name="HarderBetterFasterStronger" Direction="0" RenderingBias="Quality"/>
                </Border.Effect>
                <Grid ClipToBounds="True" Background="{DynamicResource PrimaryColor}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25"/>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <Border CornerRadius="0" Background="#FF141414" Visibility="Visible" Panel.ZIndex="10">
                        <Grid MouseDown="DragWindow" Background="Transparent">
                            <ListBox Background="Transparent" Margin="5,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" BorderThickness="0" ScrollViewer.VerticalScrollBarVisibility="Disabled">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="{x:Type ListBoxItem}">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                                    <ContentPresenter />
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <!-- Use a horizontal StackPanel to align items horizontally -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" MouseDown="DragWindow" Margin="5 0 0 0">
                                    <Image Source="\Resources\LInjectorr.png" Stretch="Uniform" MaxHeight="18" MouseDown="DragWindow"  RenderOptions.BitmapScalingMode="HighQuality" RenderOptions.EdgeMode="Aliased"/>
                                    <Label Content="{Binding PopupCaption}" Foreground="#FFFFFFFF" FontSize="14" Margin="5 0 0 0" FontFamily="Microsoft YaHei UI" MouseDown="DragWindow" Name="TitleBarLabel" />
                                </StackPanel>
                            </ListBox>
                            <!-- LEFT SIDE THINGS END -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Height="25" Width="Auto" Background="Transparent" BorderBrush="Transparent" Content="&#xE921;" Foreground="#FFFFFFFF" FontSize="7" FontFamily="Segoe Fluent Icons" Click="MinimizeButton_Click" HorizontalAlignment="Right" VerticalAlignment="Stretch" materialDesign:RippleAssist.IsDisabled="True" IsEnabled="False" />
                                <Button Height="25" Width="Auto" x:Name="MaximizeButton" Background="Transparent" BorderBrush="Transparent" Content="&#xE923;" Foreground="#FFFFFFFF" FontSize="7" FontFamily="Segoe Fluent Icons" Click="MaximizeButton_Click" HorizontalAlignment="Right" VerticalAlignment="Stretch" materialDesign:RippleAssist.IsDisabled="True" IsEnabled="False" />
                                <Button Height="25" Width="Auto" Background="Transparent" BorderBrush="Transparent" Content="&#xE8BB;" Foreground="#FFFFFFFF" FontSize="7" FontFamily="Segoe Fluent Icons" Click="ExitButton_Click" HorizontalAlignment="Right" VerticalAlignment="Stretch" materialDesign:RippleAssist.IsDisabled="True" />
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Grid Grid.Row="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="sus dog is a bozo blah blah blah your text" Foreground="{DynamicResource Text}" Grid.Row="0" Padding="25 0 25 0" TextTrimming="None" Height="Auto" TextWrapping="WrapWithOverflow" VerticalAlignment="Center" FontWeight="Bold" FontFamily="Microsoft YaHei UI" x:Name="TuUltimaCancion" />
                            <Border Background="Transparent" Grid.Row="1" Height="30" VerticalAlignment="Center" Margin="25 0 25 0" CornerRadius="3" Padding="5 0 5 0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0" Text="" materialDesign:TextFieldAssist.TextFieldCornerRadius="6" Foreground="{DynamicResource Text}" BorderThickness="0" TextAlignment="Left" materialDesign:TextFieldAssist.DecorationVisibility="Collapsed" x:Name="ContentReturn" x:FieldModifier="public" PreviewKeyUp="ContentReturn_PreviewKeyUp" Margin="-5,0,2.5,0" Background="{DynamicResource TertiaryColor}" Padding="5,4,0,4" AcceptsReturn="False"/>
                                    <Button x:Name="BrowseFileButton" Visibility="Visible" Grid.Column="1" Content="&#xE8E5;" FontFamily="Segoe Fluent Icons" Foreground="White" Background="{DynamicResource TertiaryColor}" VerticalAlignment="Center" HorizontalAlignment="Center" materialDesign:ButtonAssist.CornerRadius="6" Click="BrowseButton_Click" />
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>

                    <Grid Grid.Row="2" Margin="25 0 25 0">
                        <StackPanel Orientation="Horizontal">
                            <!--
                            <Button VerticalAlignment="Top" Content="&#xE8FB;" Margin="0 0 0 0" Padding="5" Height="35" Width="35" FontSize="16" FontFamily="Segoe MDL2 Assets" Background="{DynamicResource TertiaryColor}" Foreground="{DynamicResource Text}" BorderThickness="0" materialDesign:ButtonAssist.CornerRadius="6" />
                            <Button VerticalAlignment="Top" Content="&#xE711;" Margin="5 0 0 0" Padding="5" Height="35" Width="35" FontSize="16" FontFamily="Segoe MDL2 Assets" Background="{DynamicResource TertiaryColor}" Foreground="{DynamicResource Text}" BorderThickness="0" materialDesign:ButtonAssist.CornerRadius="6" />
                            -->

                            <Button VerticalAlignment="Top" Margin="0" Padding="5" Height="30" Width="70" FontSize="12" FontFamily="Microsoft YaHei UI" Background="{DynamicResource TertiaryColor}" Foreground="{DynamicResource Text}" BorderThickness="0" materialDesign:ButtonAssist.CornerRadius="6" Click="OkayButton_Click">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Label Content="&#xE8FB;" Foreground="{DynamicResource Text}" FontSize="14" FontFamily="Segoe Fluent Icons" VerticalAlignment="Center" VerticalContentAlignment="Center" />
                                        <Label Content="OK" Foreground="{DynamicResource Text}" FontSize="12" FontFamily="Microsoft YaHei UI" Margin="0 -1.5" VerticalAlignment="Center" />
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                            <Button VerticalAlignment="Top" Margin="5 0 0 0" Padding="5" Height="30" Width="70" FontSize="12" FontFamily="Microsoft YaHei UI" Background="{DynamicResource TertiaryColor}" Foreground="{DynamicResource Text}" BorderThickness="0" materialDesign:ButtonAssist.CornerRadius="6" Click="CancelButton_Click">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Label Content="&#xE711;" Foreground="{DynamicResource Text}" FontSize="14" FontFamily="Segoe Fluent Icons" VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="-3" />
                                        <Label Content="Cancel" Foreground="{DynamicResource Text}" FontSize="12" FontFamily="Microsoft YaHei UI" Margin="0 -1.5" VerticalAlignment="Center" VerticalContentAlignment="Center" />
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                        </StackPanel>
                        <Label Content="Press ESC to exit this menu" Foreground="{DynamicResource SecondaryText}" FontSize="10" VerticalAlignment="Bottom"/>
                    </Grid>
                </Grid>
            </Border>
        </Border>
    </Grid>
</Window>
