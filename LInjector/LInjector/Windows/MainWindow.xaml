<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:local="clr-namespace:LInjector"
    xmlns:controls="clr-namespace:LInjector.Pages"
    xmlns:custom="clr-namespace:LInjector.Windows"
    x:Class="LInjector.Windows.MainWindow"
    mc:Ignorable="d"
    MinHeight="450"
    MinWidth="650"
    Height="450" Width="650" ShowInTaskbar="True" WindowStartupLocation="CenterScreen"
    ResizeMode="CanResize"
    WindowStyle="None"
    AllowsTransparency="True"
    Icon="pack://application:,,,/LInjector;component/LInjector.ico"
    Background="Transparent"
    StateChanged="Window_StateChanged"
    SourceInitialized="Window_SourceInitialized"
    Loaded="Window_Loaded">

    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="35" UseAeroCaptionButtons="True" NonClientFrameEdges="None" ResizeBorderThickness="25" x:Name="wChromeShell"/>
    </shell:WindowChrome.WindowChrome>

    <Grid x:Name="HolderGrid" MinWidth="615" MinHeight="415" Margin="0">

    </Grid>
</Window>